<!-- BEGIN COLUMNS -->
<table class="columns" width="100%" border="0" cellspacing="0" cellpadding="0">
  <tbody>
    <tr>
      <td valign="top" id="content" class="column_left">
	
        <!-- BEGIN INBOX -->
        <div class="main">

	        <div class="page-title">
	        <h2 class="inbox-show"><%= image_tag "ico_left-inbox.png" %> <span>Direct message from <strong><%= h @direct_message.producer.name %></strong> to <strong><%= h @direct_message.consumer.name %></strong></span></h2>
	        </div>
				
			<ul class="inbox-buttons">
				<li><%= link_to 'Unread Messages', inbox_user_path(current_user) %></li>
				<li><%= link_to 'Read Messages', inbox_user_path(current_user, :mbox => 'archive') %></li>
				<li><%= link_to 'Sent Messages', inbox_user_path(current_user, :mbox => 'sent') %></li>
			</ul>
			
			<div class="view-message">
				
				<div class="message-thumb">
				<%= link_to(image_tag(@direct_message.producer.profile.avatar.url(:dashboard)), @direct_message.producer) %>
				</div>
				
				<div class="message-body">
					
					<p class="message-meta">
					<span class="date">Sent: <%= time_ago_in_words(@direct_message.created_at) %> ago</span><br />
					<span class="reply"><%= link_to "#{image_tag('/images/reply.png')} <span>Reply to #{h @direct_message.producer.name}</span>", new_user_direct_message_path(@direct_message.producer) %></span>
					</p>
					
					<p><%= h(@direct_message.message).gsub(/\n/,"<br />") %></p>
										
				</div>
				
				<div class="clear"></div>
				
			</div>
			
        </div>
        <!-- /END INBOX -->

      </td>
      <td valign="top" id="side_bar" class="column_right">
	
        <%= render "users/info" %>
		<%= render "shared/tall_advertisement" %>

      </td>
    </tr>
  </tbody>
</table>
<!-- /END COLUMNS -->