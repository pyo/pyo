- content_for(:head) do
  = javascript_include_tag :fckeditor

= render "users/top"
.main
  .inner_content
    = render :partial => "users/dashboard_nav"

    %h4.title Edit Blog

    - form_for([@user, @blog], :html => {:multipart => true}) do |form|
      = render :partial => "form", :locals => {:form=>form}
      %p= form.submit 'Update', :disable_with => "Please Wait..."

.details
  .inner_content
    = render :partial => "users/info"
  .inner_content
    = render :partial => "shared/tall_advertisement"
  