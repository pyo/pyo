.main
  - if current_user == @user
    .inner_content
      = render :partial => "users/dashboard_nav"
  
  .inner_content
    %h2 
      = "Blogs by #{@user.name.capitalize}"
      = "| #{link_to('Create New', new_user_blog_path(@user))}"  if current_user == @user 
    
    .blogs
      - unless @blogs.empty?
        - @blogs.each do |blog|
          .blog_list_item
            %h3
              = h blog.title
              (
              = link_to("read", user_blog_path(@user, blog))
              = "| #{link_to('edit', edit_user_blog_path(@user,blog))}" if is_owner?(blog) 
              = "| #{link_to('delete', [@user,blog], :confirm => 'Are you sure?', :method => :delete)}" if is_owner?(blog) 
              )
            %p 
      - else
        No Blogs Found
.details
  .inner_content
    = render :partial => "users/public_info"
  .inner_content
    = render :partial => "shared/advertisment"