.main
  - if current_user == @user
    .inner_content
      = render :partial => "users/dashboard_nav"
  
  .inner_content
    %h2 
      = "Blogs by #{@user.name.capitalize}"
      = "| #{link_to('Create New', new_user_blog_path(@user))}"  if current_user == @user 
    
    .blogs
      - unless @blogs.empty?
        - @blogs.each do |blog|
          = render :partial=>blog, :locals=>{ :user=>@user }
      - else
        No Blogs Found
.details
  .inner_content
    = render :partial => "users/public_info"
  .inner_content
    = render :partial => "shared/advertisment"