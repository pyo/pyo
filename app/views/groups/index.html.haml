%h1 Listing Groups

%table
  %tr
    %th Name
    %th Description

  - for group in @groups
    %tr
      %td= h group.name
      %td= h group.description
      %td= link_to 'Show', group
      %td= link_to 'Edit', edit_group_path(group)
      %td= link_to 'Destroy', group, :confirm => 'Are you sure?', :method => :delete

%p= link_to 'New Group', new_group_path
