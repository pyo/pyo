.main  
  - unless @groups.empty?
    .inner_content
      %h2 
        = "Groups"
      - for group in @groups
        .group_info
          %strong
            = h(group.name)
            = approve_group_btn(group)
            = deny_group_btn(group)
          %p
            = h group.description
  - else
    %h3 No pending approvals
.details
  .inner_content
    = render :partial => "users/info"

  .inner_content
    .advertisement
      Advertisement
