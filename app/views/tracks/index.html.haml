.main
  - if current_user == @user
    .inner_content
      = render :partial => "users/dashboard_nav"
  
  .inner_content
    %h2 
      = "Tracks by #{@user.name.capitalize}"
    
    .tracks
      - unless @tracks.empty?
        - @tracks.each do |track|
          .track_list_item
            %h3
              = h track.name
              (
              = link_to("listen", user_track_path(@user, track))
              = "| #{link_to('edit', edit_user_track_path(@user,track))}" if is_owner?(track) 
              = "| #{link_to('delete', [@user,track], :confirm => 'Are you sure?', :method => :delete)}" if is_owner?(track) 
              )
            %p 
              = h track.description
      - else
        No Tracks Found
.details
  .inner_content
     = render :partial => "users/public_info"
  .inner_content
    = render :partial => "shared/advertisment"