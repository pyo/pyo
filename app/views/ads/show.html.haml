.main
  .inner_content
    = render :partial => "users/dashboard_nav"
  .inner_content
    .photo_view
      %h2 
        = h @ad.title
      %br
      %p 
        = h @ad.description
      %p 
        %small 
          Posted
          =  time_ago_in_words @ad.start_date
          ago
      %p 
        %small 
          Expires in
          =  distance_of_time_in_words_to_now @ad.end_date
      %br  
      .photo_tags
        %br
        %h3 Tags:
        %p
          =h @ad.tags.collect(&:name).join(" ")
  .inner_content
    %h2 Rating    
    = render :partial =>"shared/rate_item",:locals => {:ratable=>@ad}
  .inner_content
    %h2 Comments
    =# render :partial => @event.comments
    =# render :partial => "comments/form", :locals => {:commentable => @event, :comment_class=>""}
    
.details
  .inner_content
    = render :partial => "users/public_info"
  .inner_content
    = render :partial => "shared/advertisment"