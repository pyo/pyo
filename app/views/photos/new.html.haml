.main
  .inner_content
    = render :partial => "users/dashboard_nav"
  .inner_content
    
    %h2 Upload a Photo
    
    - form_for([@user, @photo], :html => {:multipart => true}) do |form|
      %dl
        %dt= form.label :title
        %dd= form.text_field :title
        %dt= form.label :image
        %dd= form.file_field :image
        %dt= form.label :description
        %dd= form.text_area :description
        %dt= form.label :tags
        %dd= form.text_field :tag_list    
        %small Comma separate tags.    
      %p= form.submit 'Upload'
    
.details
  .inner_content
    = render :partial => "users/info"
  .inner_content
    = render :partial => "shared/tall_advertisement"