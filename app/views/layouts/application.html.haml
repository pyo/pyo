!!! Strict
%html
  %head
    %title= "Put Yourself On" + (@title ||  '')
    / %link{:rel => 'icon', :type => 'image/gif', :href=>'favicon.gif'}
    = stylesheet_link_tag 'screen', :media => 'screen'
    = stylesheet_link_tag '/stylesheets/jquery.rating.css'
    = javascript_include_tag 'jquery-1.3.2.min','application'
    = javascript_include_tag '/javascripts/jquery.rating.pack.js'
    = javascript_tag "var AUTH_TOKEN = #{form_authenticity_token.inspect};" if protect_against_forgery? 
    = yield :head
  %body
    #main.container
      .header
        %h2.logo= link_to 'Put Yourself On', root_path

        .user_bar
          = render :partial => 'users/user_bar'
      - if current_user.andand.super_user?
        .content
          %h3 Admin
          %ul.menu
            %li= link_to 'Group Approvals', pending_groups_path
      
      #navigation.content
        %ul.menu
          %li.first= link_to 'My Profile', current_user if current_user
          %li= link_to 'My Connects', '#' if current_user
          %li= link_to 'Members', members_path
          %li= link_to 'Groups', groups_path
          %li= link_to 'Music', music_path
          %li= link_to 'Videos', videos_path
          %li= link_to 'Marketplace', marketplace_path

        .search
          %form{:action=>searches_path}
            %input{:type => 'text', :name=>"q"}
            %input{:type => 'image', :src => "/images/search.png", :value => 'Search', :class => 'submit'}
            
      .content_flash
        - flash.each do |key, value|
          %div{:class => key}
            - if value.is_a? ActiveRecord::Errors
              - for error in value
                %p
                  = h error.join(" ")
            - else
              = h value
      = render :partial => "shared/advertisement"
              
      #content
        #inner_content= yield
    
    .container
      .footer.content
        .footer-right
          %ul.separated
            %li.first= link_to 'FAQ', '#'
            %li= link_to 'About Us', '#'
            %li= link_to 'Contact Us', '#'
            %li= link_to 'Terms of Use', '#'
            %li= link_to 'Privacy Policy', '#'
            %li= link_to 'PYO Blog', '#'
        .footer-left
          &copy;2009 PYO Networks. All Rights Reserved.