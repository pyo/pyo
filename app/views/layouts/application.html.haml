!!! Strict
%html
  %head
    %title= "Put Yourself On" + (@title ||  '')
    %link{:rel => 'icon', :type => 'image/gif', :href=>'favicon.gif'}
    = stylesheet_link_tag 'screen', :media => 'screen'
    = javascript_include_tag 'application', 'jquery-1.3.2.min'
  %body
    #main.container
      .header
        %h2.logo Logo

        .user_bar
          = render :partial => 'users/user_bar'
      - flash.each do |key, value|
        %div{:class => key}
          - if value.is_a? ActiveRecord::Errors
            - for error in value
              %p
                = h error.join(" ")
          - else
            = h value
      .content
        %ul.menu
          %li= link_to 'Friends', '#' if current_user
          %li= link_to 'Members', members_path
          %li= link_to 'Groups', '#' if current_user
          %li= link_to 'Music', '#'
          %li= link_to 'Videos', '#'

        .search
          %form
            %input{:type => 'text'}
            %input{:type => 'submit', :value => 'Search'}
      = yield
    
    .container
      .footer.content
        .footer-left
          2009 PYO Networks. All Rights Reserved.
        .footer-right
          %ul.separated
            %li.first= link_to 'FAQ', '#'
            %li= link_to 'About Us', '#'
            %li= link_to 'Contact Us', '#'
            %li= link_to 'Terms of Use', '#'
            %li= link_to 'Privacy Policy', '#'
            %li= link_to 'PYO Blog', '#'