%ul.separated
  - unless current_user
    %li.first= link_to 'Login', login_path
    %li= link_to 'Signup', signup_path
  - else
    %li.first= link_to 'Upload / Post', '#', :class => 'upload_post'
    %li= link_to 'Dashboard', dashboard_path
    %li= link_to "Inbox(#{current_user.messages.unread.count})", inbox_user_path(current_user)
    %li= link_to 'Logout', logout_path
  