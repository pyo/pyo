<!-- BEGIN COLUMNS -->
<table class="columns" width="100%" border="0" cellspacing="0" cellpadding="0">
  <tbody>
    <tr>
      <td valign="top" id="content" class="column_right">
	
        <%= render "users/top" %>
            
        <!-- BEGIN USER ACTIVITY -->
        <div class="prof-activity">
	
          <div class="prof-activity-title">
          <h2><%= image_tag "ico_left-feed.png" %> <span>Activity Feed</span></h2>
          </div>

            <%= render "users/dashboard_nav" %>

            <% unless current_user.first_run? %>
            <% @activities.each do |activity| %>
            <!-- BEGIN USER ACTION -->
            <div class="prof-action <% [activity] %>">
	        <%= link_to(image_tag(activity.producer.profile.avatar(:thumb)), activity.producer) if activity.producer %>
	        <p class="act_head"><%= link_to activity.producer.name, activity.producer %>
		    <%= display_notification(activity) %></p>
            </div>
            <!-- /END USER ACTION -->

            <% if @activities.total_pages > 1 %>
            <div class="load_more" id="load_more_link">
	        <%= link_to 'More...', activities_path(:page => @activities.current_page + 1, :type => params[:type]), :id => 'load_more' %>
	        </div>
	        <% end %>

            <% else %>

            <p>First run content goes here...</p>

            <% end %>
        
        </div>
        <!-- /END USER ACTIVITY -->
  
      </td>
      <td valign="top" id="side_bar" class="column_left">
	
        <%= render "users/info" %>

      </td>
    </tr>
  </tbody>
</table>
<!-- /END COLUMNS -->