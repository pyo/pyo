.main
  .inner_content
    %h2 User's Videos
  
  .inner_content
    %h2 User's Audio
    
  .inner_content
    %h2 User's Photo
    
  .inner_content
    %h2 Comments
    - @user.comments.each do |comment|
      = comment.message
    %h3 Leave a Comment
    - form_for([@user, Comment.new]) do |f|
      = f.text_area :message
      = f.submit 'Submit'

.details
  .inner_content
    - if current_user and current_user != @user
      - unless current_user.following?(@user)
        - form_tag follow_user_path(@user) do
          = submit_tag 'Follow'
      - else
        Following
      %button Favorite
      %button Message
    
    = @user.name
    
    %p
      Lorem ipsum dolor sit amet, consectetur adipisicing elit, metus egetipsum dolor sit
    
    - if @user.followings.length > 0
      %p=@user.followings.length.to_s + "Following"
      %p
        - @user.followings.each do |following|
          = link_to following.child.name, following.child

  .inner_content
    .advertisement
