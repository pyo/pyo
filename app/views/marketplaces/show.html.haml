%h2 This is the Talent Marketplace

-if signed_in?
  %ul
    %li
      =link_to "Create an Ad", new_user_ad_path(current_user)
    %li
      =link_to "Create an Event", new_user_booking_path(current_user)

.categories
  - @categories.each do |category|
    = link_to category.name, group_marketplace_path(category)

.events
  %h3 Recent Events
  = render :partial=>"bookings", :collection=>@events, :as=>:booking
  
.ads
  %h3 Recent Ads
  = render :partial=>"ads", :collection=>@ads, :as=>:ad