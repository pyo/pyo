.comment
  .thumb_info
    = image_tag comment.producer.profile.avatar(:thumb)
  .comment_message
    = link_to comment.producer.name, comment.producer
    = "#{time_ago_in_words(comment.created_at)} ago"
    = "| #{link_to('delete', comment, :confirm => 'Are you sure?', :method => :delete)}" if is_owner?(comment)
    %br
    = comment.message
  %br{:clear=>"all"}