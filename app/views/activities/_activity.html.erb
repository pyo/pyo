<!-- BEGIN USER ACTION -->
<div class="prof-action <%= [activity] %>">

  <div class="thumb">
  <%= link_to(image_tag(activity.producer.profile.avatar(:thumb)), activity.producer) if activity.producer %>
  </div>

  <div class="activity">
  <p><%= link_to activity.producer.name, activity.producer %>
  <%= display_notification(activity) %></p>
  <p><%= "#{time_ago_in_words(activity.created_at)}" %></p>
  </div>

</div>
<!-- /END USER ACTION -->